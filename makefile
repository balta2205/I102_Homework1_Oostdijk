run-Ej_1:
	echo 'Ejercicio_1: Crear una matriz de NxN y recorrerla inversamente con un unico ciclo for.'

	g++ -std=c++17 -Wall -Wextra -o Ej_1 Ej_1/Ejercicio_1.cpp
	./Ej_1

run-Ej_2:
	echo 'Ejercicio_2: Implementacion de un sistema log.'

	g++ -std=c++17 -Wall -Wextra -o Ej_2 Ej_2/Ejercicio_2.cpp
	./Ej_2

run-Ej_3:
	echo 'Ejercicio_3: Implementacion de listas.'

	g++ -std=c++17 -Wall -Wextra -o Ej_3 Ej_3/Ejercicio_3.cpp
	./Ej_3

run-Ej_4:
	echo 'Ejercicio_4: Comparar dos textos recursivamente.'

	g++ -std=c++17 -Wall -Wextra -o Ej_4 Ej_4/Ejercicio_4.cpp
	./Ej_4